<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DiagnoseActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:text="选择罐印颜色"
        android:textColor="@color/colorBlue"
        android:textSize="25sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="90dp"
        android:background="@drawable/graysolid"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@drawable/diagnosepic" />
    </LinearLayout>

    <EditText
        android:id="@+id/et_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:hint="请填写就诊人姓名"
        android:textSize="20sp" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:columnCount="4"
        android:orientation="horizontal"
        android:rowCount="7">

        <TextView
            android:id="@+id/tv_p1"
            android:layout_columnSpan="3"
            android:layout_gravity="fill"
            android:layout_margin="2dp"
            android:background="@drawable/bluesolid"
            android:paddingLeft="20dp"
            android:text="@string/part1"
            android:textColor="@color/colorWhite"
            android:textSize="25sp"/>

        <EditText
            android:id="@+id/et_1"
            android:layout_columnSpan="1"
            android:background="@drawable/graysolid"
            android:hint="颜色"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/tv_p2"
            android:layout_columnSpan="3"
            android:layout_gravity="fill"
            android:layout_margin="2dp"
            android:background="@drawable/bluesolid"
            android:paddingLeft="20dp"
            android:text="@string/part2"
            android:textColor="@color/colorWhite"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/et_2"
            android:layout_columnSpan="1"
            android:background="@drawable/graysolid"
            android:hint="颜色"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/tv_p3"
            android:layout_columnSpan="3"
            android:layout_gravity="fill"
            android:layout_margin="2dp"
            android:background="@drawable/bluesolid"
            android:paddingLeft="20dp"
            android:text="@string/part3"
            android:textColor="@color/colorWhite"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/et_3"
            android:layout_columnSpan="1"
            android:background="@drawable/graysolid"
            android:hint="颜色"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/tv_p4"
            android:layout_columnSpan="3"
            android:layout_gravity="fill"
            android:layout_margin="2dp"
            android:background="@drawable/bluesolid"
            android:paddingLeft="20dp"
            android:text="@string/part4"
            android:textColor="@color/colorWhite"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/et_4"
            android:layout_columnSpan="1"
            android:background="@drawable/graysolid"
            android:hint="颜色"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/tv_p5"
            android:layout_columnSpan="3"
            android:layout_gravity="fill"
            android:layout_margin="2dp"
            android:background="@drawable/bluesolid"
            android:paddingLeft="20dp"
            android:text="@string/part5"
            android:textColor="@color/colorWhite"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/et_5"
            android:layout_columnSpan="1"
            android:background="@drawable/graysolid"
            android:hint="颜色"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/tv_p6"
            android:layout_columnSpan="3"
            android:layout_gravity="fill"
            android:layout_margin="2dp"
            android:background="@drawable/bluesolid"
            android:paddingLeft="20dp"
            android:text="@string/part6"
            android:textColor="@color/colorWhite"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/et_6"
            android:layout_columnSpan="1"
            android:background="@drawable/graysolid"
            android:hint="颜色"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/tv_p7"
            android:layout_columnSpan="3"
            android:layout_gravity="fill"
            android:layout_margin="2dp"
            android:background="@drawable/bluesolid"
            android:paddingLeft="20dp"
            android:text="@string/part7"
            android:textColor="@color/colorWhite"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/et_7"
            android:layout_columnSpan="1"
            android:background="@drawable/graysolid"
            android:hint="颜色"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:textSize="25sp" />
    </GridLayout>

    <Button
        android:id="@+id/btn_decide_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="60dp"
        android:background="@drawable/bluesolid"
        android:text="确定"
        android:textColor="@color/colorWhite"
        android:textSize="20sp" />


</LinearLayout>